<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/BolaVerde2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/textCriar_Conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Criar Conta"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/verde"
        />

    <View
        android:layout_width="3dp"
        android:layout_height="36dp"
        />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginStart="40dp"
        android:text="E-mail"
        android:textStyle="bold"
        android:textSize="15dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="37dp"
        />

    <TextView
        android:id="@+id/textTelefone"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginStart="40dp"
        android:text="Telefone"
        android:textStyle="bold"
        android:textSize="15sp"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="37dp"
        />

    <TextView
        android:id="@+id/textNome_Completo"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginStart="40dp"
        android:text="Nome Completo"
        android:textStyle="bold"
        android:textSize="15sp"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="37dp"
        />

    <TextView
        android:id="@+id/textNome_de_Usuário"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginStart="40dp"
        android:text="Nome de Usuário"
        android:textStyle="bold"
        android:textSize="15sp"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="37dp"
        />

    <TextView
        android:id="@+id/textSenha"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginStart="40dp"
        android:text="Senha"
        android:textStyle="bold"
        android:textSize="15sp"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="37dp"
        />

    <Button
        android:id="@+id/button_Inscreva_se"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/verde"
        android:layout_marginVertical="5dp"
        android:text="Inscreva-se"
        />

</LinearLayout>